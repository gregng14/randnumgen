<script>
	$(".num-gen").click(function(){
		let listString = ""
		let numList = generateRandomNumbers();
		numList.forEach( num => listString = listString.concat('<li>'+num+'</li>'));
		$(".num-list").html(listString);
	});

	let generateRandomNumbers = () => {
		let numList = []; // array for random numbers
		let numCheck = [] // array to check if random number has been generated
		let max = 10000;
		let min = 1;
		let increment = 0;
		let num;
		while (increment<max){
			num = Math.floor((Math.random()*max) + min);
			if (!numCheck[num]){ // checks if number has been generated
				numCheck[num] = true; // true if number is generated
				numList.push(num); 
				increment++;
			}
		}
		return numList;
	}
</script>